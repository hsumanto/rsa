<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.vpac.ndg.storage.model.TaskCats" table="TASKCATS" lazy="true">
		<id name="id" type="string" column="ID">
			<generator class="uuid" />
		</id>
		<property name="taskId" type="string" column="TASKID" />
		<one-to-one name="cats" class="org.vpac.ndg.query.stats.Cats" cascade="save-update" />
	</class>
	<class name="org.vpac.ndg.storage.model.TaskHist" table="TASKHIST" lazy="true">
		<id name="id" type="string" column="ID">
			<generator class="uuid" />
		</id>
		<property name="taskId" type="string" column="TASKID" />
		<one-to-one name="hist" class="org.vpac.ndg.query.stats.Hist" cascade="save-update" />
	</class>
	<class name="org.vpac.ndg.query.stats.Cats" table="CATS" lazy="true">
		<id name="id" type="string" column="ID">
			<generator class="uuid" />
		</id>
		<map name="categories">
			<key column="id" />
			<index column="cat_id" type="java.lang.Integer"/>
			<one-to-many class="org.vpac.ndg.query.stats.Hist" /> 
		</map>
	</class>
	<class name="org.vpac.ndg.query.stats.Hist" table="HIST" lazy="true">
		<id name="id" type="string" column="ID">
			<generator class="uuid" />
		</id>
		<list name="buckets" cascade="save-update" lazy="true">
			<key column="hist_id" />
			<list-index column="idx" />
			<one-to-many class="org.vpac.ndg.query.stats.Bucket" />
		</list>
	</class>
	<class name="org.vpac.ndg.query.stats.Bucket" table="BUCKET"
		lazy="true">
		<id name="id" type="string" column="ID">
			<generator class="uuid" />
		</id>
		<property name="lower" type="double" column="LOWER" />
		<property name="upper" type="double" column="UPPER" />
		<one-to-one name="stats" class="org.vpac.ndg.query.stats.Stats"
			cascade="save-update" />
	</class>
	<class name="org.vpac.ndg.query.stats.Stats" table="STATS" lazy="true">
		<id name="id" type="string" column="ID">
			<generator class="uuid" />
		</id>
		<property name="n" type="long" column="N" />
		<property name="min" type="double" column="MIN" />
		<property name="max" type="double" column="MAX" />
		<property name="mean" type="double" column="MEAN" />
	</class>
</hibernate-mapping>
