<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.vpac.ndg.query.stats.Cats" table="CATS" lazy="true" >
		<id name="id" type="string" column="ID">
			<generator class="uuid"/>
		</id>
		<map name="categories" table="HIST">
           <key column="ID" not-null="true"/>
           <map-key column="cat" type="integer"/>
           <element column="value" type="org.vpac.ndg.query.stats.Hist"/>
      	</map>
	</class>
	<class name="org.vpac.ndg.query.stats.Stats" table="STATS" lazy="true" >
		<id name="id" type="string" column="ID">
			<generator class="uuid"/>
		</id>
		<property name="n" type="long" column="N" />
		<property name="min" type="double" column="MIN" />
		<property name="max" type="double" column="MAX" />
		<property name="mean" type="double" column="MEAN" />
	</class>
	<class name="org.vpac.ndg.query.stats.Bucket" table="BUCKET" lazy="true" >
		<id name="id" type="string" column="ID">
			<generator class="uuid"/>
		</id>
		<property name="lower" type="double" column="LOWER" />
		<property name="upper" type="double" column="UPPER" />
 		<one-to-one name="stats" class="org.vpac.ndg.query.stats.Stats" cascade="save-update" />
	</class>
	<class name="org.vpac.ndg.query.stats.Hist" table="HIST" lazy="true" >
		<id name="id" type="string" column="ID">
			<generator class="uuid"/>
		</id>
  		<list name="buckets" cascade="save-update" lazy="true" table="BUCKET">
			<key column="BUCKETS" />
			<list-index column="ID" />
			<one-to-many class="org.vpac.ndg.query.stats.Bucket" />
		</list>
	</class>
</hibernate-mapping>
